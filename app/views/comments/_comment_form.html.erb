<div class="comment_form">
  <%= form_for comment, url: post_comments_path(post) do |f| %>
    <div>
      <%= f.text_area :content, placeholder: "Compose new comment...",
                                class: "form-control" %>
    </div>
    <%= f.submit "Comment", class: "btn btn-primary" %>
  <% end %>
</div>
